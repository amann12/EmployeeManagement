@model EmployeeeManagement.Models.Employee
@{
    ViewData["Title"] = "EmployeeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .whity {
        background-color: white;
        border-color: yellow;
        text-align: center;
        color: navy;
    }
</style>

<center>
<h1 class="whity">@Model.Name's Detail</h1>

<table class="table" border="5">
    <thead>
        <tr class="thead-dark table-striped">
            <th scope="col">Name</th>
            <th scope="col">EmailId</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Department</th>
        </tr>
    </thead>
    <tbody>
        <tr class="table-light">
            <td>@Model.Name</td>
            <td>@Model.EmailId</td>
            <td>@Model.Number</td>
            <td>@Model.Department</td>
        </tr>
    </tbody>
</table>
</center>

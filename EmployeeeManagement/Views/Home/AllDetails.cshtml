@model IEnumerable<EmployeeeManagement.Models.Employee>
@{
    ViewData["Title"] = "AllDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .whity {
        background-color: white;
        border-color: yellow;
        text-align: center;
        color: navy;
    }
</style>
<center>

<h1 class="whity">Employee Details</h1>

<table class="table" border="5">
    <thead>
        <tr class="thead-dark table-striped" >
            <th scope="col" rowspan="2">Name</th>
            <th scope="col" rowspan="2">EmailId</th>
            <th scope="col" rowspan="2">Number</th>
            <th scope="col" rowspan="2">Department</th>
            <th scope="col" rowspan="2">Details</th>
            <th scope="col" rowspan="2">Edit</th>
            <th scope="col" rowspan="2">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
        <tr class="table-light">
            <td>@e.Name</td>
            <td>@e.EmailId</td>
            <td>@e.Number</td>
            <td>@e.Department</td>
            <td>
                <a asp-controller="Home" asp-action="EmployeeDetails" asp-route-id="@e.Id">@e.Name View</a>
            </td>
            <td>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@e.Id">@e.Name Edit</a>
            </td>
            <td>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@e.Id">@e.Name Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
</center>